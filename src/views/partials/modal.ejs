<div
  id="modal"
  class="fixed left-0 top-0 bg-black bg-opacity-50 w-screen h-screen justify-center items-center opacity-0 hidden transition-opacity duration-500"
>
  <div
    class="bg-slate-300 rounded shadow-md p-8 w-[50%] h-[50%] flex gap-5 flex-col overflow-hidden justify-center items-center"
  >
    <div class="flex flex-col items-center justify-center gap-5">
      <div class="flex flex-row">
        <label for="email">Email cím</label>
        <input
          type="text"
          name="email"
          id="email"
          class="h-10 border mt-1 rounded px-4 w-full bg-gray-50 focus:outline-0"
          value=""
        />
      </div>
      <canvas id="canvas" class="rounded-md" width="640" height="480"></canvas>
      <div class="flex flex-row justify-end gap-8 w-full">
        <button
          onclick="sendPicture()"
          class="cursor-pointer block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          Küldés
        </button>
        <button
          onclick="hideDialog()"
          class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          Mégse
        </button>
      </div>
    </div>
  </div>
</div>
